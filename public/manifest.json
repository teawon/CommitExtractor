{
  "manifest_version": 3,
  "name": "CommitCrawler",
  "version": "1.0",
  "description": "CommitCrawler",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "scripting",
    "clipboardWrite",
    "debugger",
    "tabs"
  ],
  "host_permissions": ["*"],
  "background": {
    "service_worker": "commitInterceptor.js",
    "type": "module"
  },
  "action": {
    "default_popup": "base.html",
    "default_icon": {
      "16": "static/images/toolbar.png",
      "48": "static/images/toolbar.png",
      "128": "static/images/toolbar.png"
    }
  }
}
